<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_pinksun"
    tools:context=".admin.suspensions.SuspensionsMain">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main"/>

    <RelativeLayout
        android:id="@+id/switchLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/allUsersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/all_users_label"
            android:textColor="@color/tiramisu_orange" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/suspendedUsersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/allUsersBtn"
            android:backgroundTint="@color/grey"
            android:text="@string/suspended_users_label"
            android:textColor="@color/warm_orange_brown" />
    </RelativeLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentUsersContainer"
        android:name="com.example.mygrub.admin.suspensions.all.FragmentAllUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/switchLayout" />

</RelativeLayout>