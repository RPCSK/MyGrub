<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.home.welfare.FragmentWelfare">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:textColor="@color/old_green"
                android:text="@string/what_are_you_looking"
                android:textSize="30sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/orgCard"
                android:layout_below="@+id/message"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="30dp"
                android:layout_width="250dp"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/org_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/general_icon_group"
                        android:tint="@color/dark_mint"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/old_green"
                        android:text="@string/welfare_org_label"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/aidCard"
                android:layout_below="@+id/orgCard"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="10dp"
                android:elevation="10dp"
                android:layout_marginBottom="30dp"
                android:layout_width="250dp"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/aid_icon"
                        android:layout_width="150dp"
                        app:tint="@color/dark_mint"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/general_icon_aid"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@color/old_green"
                        android:text="@string/program_label"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>