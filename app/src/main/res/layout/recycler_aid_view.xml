<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="5dp"
    android:background="@drawable/textfield_style1"
    android:padding="20dp">

    <ImageView
        android:id="@+id/aidImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@color/grey"
        android:scaleType="centerCrop"
        android:src="@drawable/form_icon_image" />

    <TextView
        android:id="@+id/aidTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/aidImage"
        android:layout_marginStart="20dp"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="@color/dark_sea_green"
        android:text="@string/title_label"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@id/aidImage"
        android:textColor="@color/emerald_green"
        android:text="@string/more_info_label"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textStyle="bold" />
</RelativeLayout>